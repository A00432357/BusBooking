@model BusBooking.user
@{
    ViewBag.Title = "LoginPage";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Login</title> <!-- yeild-->
    <style>
        .center_div {
            margin: 0 auto;
            width: 30% /* value of your choice which suits your alignment */
        }
    </style>
</head>
<body>
    <br />
    <br />
    <img src="~/Scripts/Images/Capture.PNG" class=" mx-auto" style="width: 50%;margin:26px 216px auto" alt="Responsive image" >
    <form action="" method="post" class="center_div">
        <div class="form-group" id="login-div">
            @Html.LabelFor(model => model.email)
            <label for="Email">Email address</label>
            <input type="email" class="form-control" id="Email" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
        <button type="submit" class="btn btn-info">Reset</button>
    </form>

</body>
</html>



